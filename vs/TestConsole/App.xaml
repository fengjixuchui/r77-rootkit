<Application
	x:Class="TestConsole.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:TestConsole"
	xmlns:api="https://schemas.bytecode77.com/2019/xaml/api"
	xmlns:ui="https://schemas.bytecode77.com/2019/xaml/presentation"
	StartupUri="Views/MainWindow.xaml" ShutdownMode="OnMainWindowClose" DispatcherUnhandledException="Application_DispatcherUnhandledException">
	<Application.Resources>
		<Style TargetType="{x:Type Image}">
			<Style.Triggers>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Opacity" Value=".5" />
					<Setter Property="Effect">
						<Setter.Value>
							<ui:GrayscaleEffect />
						</Setter.Value>
					</Setter>
				</Trigger>
			</Style.Triggers>
		</Style>
		<Style TargetType="{x:Type GridSplitter}">
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="VerticalAlignment" Value="Stretch" />
		</Style>
		<Style TargetType="{x:Type StatusBar}">
			<Setter Property="Padding" Value="5,0,0,0" />
			<Setter Property="BorderThickness" Value="0,1,0,0" />
			<Setter Property="BorderBrush" Value="#30000000" />
		</Style>
		<Style x:Key="{x:Static StatusBar.SeparatorStyleKey}" TargetType="{x:Type Separator}">
			<Setter Property="Opacity" Value=".3" />
		</Style>
		<Style TargetType="{x:Type Hyperlink}">
			<Style.Triggers>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Foreground" Value="#a0a0a0" />
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="ImageNoDisabledEffect" TargetType="{x:Type Image}" />
	</Application.Resources>
</Application>